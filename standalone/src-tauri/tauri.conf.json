{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Absurd Sqlite",
  "version": "0.1.0",
  "identifier": "ing.isbuild.absurd-sqlite-standalone",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:tauri",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Absurd SQLite",
        "width": 1075,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["bin/absurd-extension"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "Absurd SQLite",
      "args": [
        {
          "name": "db",
          "description": "Path to the SQLite database file"
        },
        {
          "name": "enable-dev-api-server",
          "description": "Enable the local dev API server"
        },
        {
          "name": "dev-api-server-port",
          "description": "Port for the dev API server (default 11223)"
        }
      ]
    }
  }
}
